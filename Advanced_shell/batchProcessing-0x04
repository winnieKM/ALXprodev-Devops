#!/bin/bash

# Pokémon list
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

mkdir -p pokemon_data
> errors.txt

# Timeout in seconds (optional)
TIMEOUT=10

# Store PIDs
declare -a pids

for pokemon in "${pokemon_list[@]}"
do
  (
    echo "Fetching data for $pokemon..."

    curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "pokemon_data/${pokemon}.json"

    if [ $? -eq 0 ]; then
      echo "Saved data to pokemon_data/${pokemon}.json ✅"
    else
      echo "Failed to fetch data for $pokemon ❌" >> errors.txt
    fi
  ) &
  
  # Store PID of background job
  pids+=($!)
done

# Monitor background jobs
for pid in "${pids[@]}"
do
  # Wait with timeout (optional safety)
  ( sleep $TIMEOUT && kill -0 $pid 2>/dev/null && kill -9 $pid && echo "Process $pid killed due to timeout." >> errors.txt ) &
  wait $pid
done

echo "✅ All fetch jobs completed."
